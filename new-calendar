    <script>
        // è·å–DOMå…ƒç´ 
        const contentInput = document.getElementById('content');
        const sourceInput = document.getElementById('source');
        const contentCount = document.getElementById('content-count');
        const sourceCount = document.getElementById('source-count');
        const generateBtn = document.getElementById('generate-btn');
        const downloadBtn = document.getElementById('download-btn');
        const randomBtn = document.getElementById('random-btn');
        const cardContainer = document.getElementById('card-container');

        // å®æ—¶æ›´æ–°å­—æ•°ç»Ÿè®¡
        contentInput.addEventListener('input', () => {
            contentCount.textContent = contentInput.value.length;
        });

        sourceInput.addEventListener('input', () => {
            sourceCount.textContent = sourceInput.value.length;
        });

        // éšæœºè·å–é‡‘å¥åŠŸèƒ½
        randomBtn.addEventListener('click', async () => {
            // ç¦ç”¨æŒ‰é’®å¹¶æ˜¾ç¤ºåŠ è½½çŠ¶æ€
            randomBtn.disabled = true;
            randomBtn.textContent = 'åŠ è½½ä¸­...';
            
            try {
                const response = await fetch('https://api.siliconflow.cn/v1/chat/completions', {
                    method: 'POST',
                    headers: {
                        'Authorization': 'Bearer sk-ruvyooykrvickmrwyaebolgwxlauyfhzhqejutrobacumgoe',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        "model": "Qwen/Qwen2.5-Coder-7B-Instruct",
                        "messages": [
                            {
                                "role": "user",
                                "content": "éšæœºå›å¤æˆ‘ä¸€å¥é‡‘å¥å’Œå‡ºå¤„,åŒ…æ‹¬ä¸é™äºå½±è§†å‰§ã€åäººåè¨€ã€åè‘—ã€æ­Œè¯ç­‰. è¾“å‡ºä¸ºjsonå½¢å¼ã€å†…å®¹ä¸ºtextã€å‡ºå¤„ä¸ºauthor"
                            }
                        ],
                        "stream": false,
                        "max_tokens": 4096,
                        "min_p": 0.05,
                        "temperature": 0.7,
                        "top_p": 0.7,
                        "top_k": 50,
                        "frequency_penalty": 0.5,
                        "n": 1,
                        "response_format": {
                            "type": "text"
                        }
                    })
                });
                
                if (!response.ok) {
                    throw new Error(`APIè¯·æ±‚å¤±è´¥ï¼š${response.status} ${response.statusText}`);
                }
                
                const data = await response.json();
                console.log('APIå“åº”æ•°æ®:', data);
                
                // æå–AIå“åº”å†…å®¹
                const aiContent = data.choices[0].message.content;
                console.log('AIå“åº”å†…å®¹:', aiContent);
                
                // è§£æJSONå†…å®¹
                let jsonContent = null;
                let cleanedContent = aiContent.trim();
                
                // å°è¯•åŒ¹é…å„ç§æ ¼å¼çš„JSONå†…å®¹
                try {
                    // 1. å°è¯•åŒ¹é…å¸¦jsonæ ‡è®°çš„markdownä»£ç å—
                    const jsonMatch = cleanedContent.match(/```json([\s\S]*?)```/);
                    if (jsonMatch) {
                        const extractedJson = jsonMatch[1].trim();
                        jsonContent = JSON.parse(extractedJson);
                        console.log('è§£æå¸¦jsonæ ‡è®°çš„markdownä»£ç å—æˆåŠŸ:', jsonContent);
                    } else {
                        // 2. å°è¯•åŒ¹é…ä¸å¸¦jsonæ ‡è®°çš„markdownä»£ç å—
                        const codeMatch = cleanedContent.match(/```([\s\S]*?)```/);
                        if (codeMatch) {
                            const extractedJson = codeMatch[1].trim();
                            jsonContent = JSON.parse(extractedJson);
                            console.log('è§£æä¸å¸¦jsonæ ‡è®°çš„markdownä»£ç å—æˆåŠŸ:', jsonContent);
                        } else {
                            // 3. å°è¯•ç›´æ¥è§£æ
                            jsonContent = JSON.parse(cleanedContent);
                            console.log('ç›´æ¥è§£æJSONæˆåŠŸ:', jsonContent);
                        }
                    }
                } catch (parseError) {
                    console.error('JSONè§£æå¤±è´¥:', parseError);
                    throw new Error('æ— æ³•è§£æAIå“åº”æ ¼å¼');
                }
                
                // éªŒè¯è§£æåçš„JSONç»“æ„
                if (!jsonContent || typeof jsonContent !== 'object' || !jsonContent.text || !jsonContent.author) {
                    console.error('è§£æåçš„JSONç»“æ„ä¸å®Œæ•´:', jsonContent);
                    throw new Error('AIå“åº”æ ¼å¼ä¸ç¬¦åˆè¦æ±‚');
                }
                
                console.log('è§£æåçš„JSONå†…å®¹:', jsonContent);
                
                // å¡«å……åˆ°è¾“å…¥æ¡†
                contentInput.value = jsonContent.text;
                sourceInput.value = jsonContent.author;
                
                // æ›´æ–°å­—æ•°ç»Ÿè®¡
                contentCount.textContent = jsonContent.text.length;
                sourceCount.textContent = jsonContent.author.length;
                
            } catch (error) {
                console.error('è·å–éšæœºé‡‘å¥å¤±è´¥ï¼š', error);
                alert('è·å–éšæœºé‡‘å¥å¤±è´¥ï¼Œè¯·ç¨åé‡è¯•');
            } finally {
                // æ¢å¤æŒ‰é’®çŠ¶æ€
                randomBtn.disabled = false;
                randomBtn.textContent = 'ğŸ² éšæœº';
            }
        });

        // ç”Ÿæˆæ—¥å†å¡ç‰‡
        generateBtn.addEventListener('click', () => {
            // è·å–ç”¨æˆ·è¾“å…¥
            const content = contentInput.value.trim();
            const source = sourceInput.value.trim();

            // éªŒè¯è¾“å…¥
            if (!content) {
                alert('è¯·è¾“å…¥æ–‡æ¡ˆå†…å®¹');
                return;
            }

            if (!source) {
                alert('è¯·è¾“å…¥æ–‡æ¡ˆæ¥æº');
                return;
            }

            // è·å–ç³»ç»Ÿæ—¶é—´
            const now = new Date();
            const date = now.getDate();
            const month = now.getMonth() + 1;
            const year = now.getFullYear();
            const day = now.getDay();
            const weekdays = ['å‘¨æ—¥', 'å‘¨ä¸€', 'å‘¨äºŒ', 'å‘¨ä¸‰', 'å‘¨å››', 'å‘¨äº”', 'å‘¨å…­'];
            const weekday = weekdays[day];

            // æ ¼å¼åŒ–æœˆä»½
            const formattedMonth = month < 10 ? `0${month}` : month;

            // ç”Ÿæˆå¡ç‰‡HTML
            const cardHTML = `
                <div id="card-preview">
                    <div class="card-header">
                        <div class="card-date">${date}</div>
                        <div class="card-month-year">${month}æœˆ ${year}å¹´</div>
                    </div>
                    <div class="card-content">
                        <div class="card-text">${content}</div>
                        <div class="card-source">â€” ${source}</div>
                    </div>
                    <div class="card-footer">
                        ${year}å¹´${formattedMonth}æœˆ${date}æ—¥ ${weekday}
                    </div>
                </div>
            `;

            // æ›´æ–°é¢„è§ˆåŒºåŸŸ
            cardContainer.innerHTML = cardHTML;

            // æ˜¾ç¤ºä¸‹è½½æŒ‰é’®
            downloadBtn.style.display = 'inline-block';
        });

        // ä¸‹è½½æ—¥å†å¡ç‰‡
        downloadBtn.addEventListener('click', () => {
            // åˆ›å»ºcanvaså…ƒç´ 
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            // è®¾ç½®canvaså°ºå¯¸
            canvas.width = 320;
            canvas.height = 450;

            // è·å–ç³»ç»Ÿæ—¶é—´
            const now = new Date();
            const date = now.getDate();
            const month = now.getMonth() + 1;
            const year = now.getFullYear();
            const day = now.getDay();
            const weekdays = ['å‘¨æ—¥', 'å‘¨ä¸€', 'å‘¨äºŒ', 'å‘¨ä¸‰', 'å‘¨å››', 'å‘¨äº”', 'å‘¨å…­'];
            const weekday = weekdays[day];

            // ç»˜åˆ¶å¡ç‰‡èƒŒæ™¯
            ctx.fillStyle = '#ffffff';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // æ·»åŠ é˜´å½±æ•ˆæœ
            ctx.shadowColor = 'rgba(0, 0, 0, 0.15)';
            ctx.shadowBlur = 25;
            ctx.shadowOffsetX = 0;
            ctx.shadowOffsetY = 8;
            
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // é‡ç½®é˜´å½±
            ctx.shadowColor = 'transparent';
            ctx.shadowBlur = 0;

            // ç»˜åˆ¶å¡ç‰‡å¤´éƒ¨æ¸å˜èƒŒæ™¯
            const gradient = ctx.createLinearGradient(0, 0, canvas.width, 140);
            gradient.addColorStop(0, '#667eea');
            gradient.addColorStop(1, '#764ba2');
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, canvas.width, 140);

            // ç»˜åˆ¶æ—¥æœŸ
            ctx.fillStyle = '#ffffff';
            ctx.font = 'bold 64px Microsoft YaHei';
            ctx.textAlign = 'center';
            ctx.fillText(date.toString(), canvas.width / 2, 80);

            // ç»˜åˆ¶æœˆä»½å’Œå¹´ä»½
            ctx.font = '20px Microsoft YaHei';
            ctx.fillText(`${month}æœˆ ${year}å¹´`, canvas.width / 2, 115);

            // ç»˜åˆ¶æ–‡æ¡ˆå†…å®¹
            ctx.fillStyle = '#2c3e50';
            ctx.font = '18px Microsoft YaHei';
            ctx.textAlign = 'center';
            ctx.lineWidth = 1;
            
            // å¤„ç†æ–‡æ¡ˆæ¢è¡Œ
            const content = contentInput.value.trim();
            const source = sourceInput.value.trim();
            
            // ç®€å•çš„æ–‡æœ¬æ¢è¡Œå¤„ç†
            let lines = [];
            let currentLine = '';
            const maxWidth = 260;
            const words = content.split('');
            
            for (let i = 0; i < words.length; i++) {
                const testLine = currentLine + words[i];
                const metrics = ctx.measureText(testLine);
                
                if (metrics.width > maxWidth) {
                    lines.push(currentLine);
                    currentLine = words[i];
                } else {
                    currentLine = testLine;
                }
            }
            lines.push(currentLine);

            // ç»˜åˆ¶å¤šè¡Œæ–‡æœ¬
            let yPosition = 220;
            lines.forEach(line => {
                ctx.fillText(line, canvas.width / 2, yPosition);
                yPosition += 30;
            });

            // ç»˜åˆ¶æ¥æº
            ctx.fillStyle = '#7f8c8d';
            ctx.font = 'italic 16px Microsoft YaHei';
            ctx.fillText(`â€” ${source}`, canvas.width / 2, yPosition + 20);

            // ç»˜åˆ¶å¡ç‰‡åº•éƒ¨
            ctx.fillStyle = '#f8f9fa';
            ctx.fillRect(0, 400, canvas.width, 50);

            // ç»˜åˆ¶åº•éƒ¨æ—¥æœŸ
            ctx.fillStyle = '#bdc3c7';
            ctx.font = '12px Microsoft YaHei';
            const footerText = `${year}å¹´${month < 10 ? '0' + month : month}æœˆ${date < 10 ? '0' + date : date}æ—¥ ${weekday}`;
            ctx.fillText(footerText, canvas.width / 2, 425);

            // æ ¼å¼åŒ–æ—¥æœŸç”¨äºæ–‡ä»¶å
            const formattedMonth = month < 10 ? `0${month}` : month;
            const formattedDate = date < 10 ? `0${date}` : date;
            
            // ä¿å­˜ä¸ºå›¾ç‰‡
            const link = document.createElement('a');
            link.download = `æ—¥å†å¡ç‰‡_${year}${formattedMonth}${formattedDate}.png`;
            link.href = canvas.toDataURL('image/png');
            link.click();
        });
    </script>
